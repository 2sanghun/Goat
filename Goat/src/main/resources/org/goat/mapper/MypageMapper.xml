<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace로 TestMapper와 연결 -->
<mapper namespace="org.goat.mapper.MypageMapper">
	<update id="modify">
	 update member set name = 
	 #{name}, password= #{password}, email=#{email}, addr=#{addr}
	 where id=#{id}
	</update>
	
	<delete id = "remove">
	delete from member
	where password=#{id}
	</delete>
	
	<select id="my" resultType="org.goat.model.MemberVO"  >
	select * from member;
	</select>
	
	<select id="detail" resultType="org.goat.model.MemberVO"  >
	select * from member where id=#{id};
	</select>
	
</mapper>